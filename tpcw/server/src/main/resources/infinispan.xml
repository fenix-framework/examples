<?xml version="1.0" encoding="UTF-8"?>
<infinispan>
    <global>
        <globalJmxStatistics
                enabled="true"
                jmxDomain="org.infinispan"/>
        <transport
                clusterName="infinispan-cluster">
            <properties>
                <property
                        name="configurationFile"
                        value="jgroups/fenix-framework-udp-jgroups.xml"/>
            </properties>
        </transport>
    </global>
    <default>
        <clustering mode="r">
            <sync
                    replTimeout="15000"/>
            <stateTransfer
                    fetchInMemoryState="true"
                    chunkSize="100"
                    timeout="240000"/>
        </clustering>
        <versioning
                enabled="true"
                versioningScheme="SIMPLE"/>
    </default>
</infinispan>

